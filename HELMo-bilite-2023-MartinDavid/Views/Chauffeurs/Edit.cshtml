@model HELMo_bilite_2023_MartinDavid.ViewModel.ChauffeurViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Modifier les permis</h1>

<h4>Conducteurs</h4>
<hr />
<div class="row">
    <p>@ViewBag.Error</p>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" readonly />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" readonly />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricule" class="control-label"></label>
                <input asp-for="Matricule" class="form-control" readonly />
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermisB" class="form-check-label"></label>
                <input asp-for="PermisB" class="form-check-input" type="checkbox"/>
                <span asp-validation-for="PermisB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermisC" class="form-check-label"></label>
                <input asp-for="PermisC" class="form-check-input" type="checkbox"/>
                <span asp-validation-for="PermisC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PermisCE" class="form-check-label"></label>
                <input asp-for="PermisCE" class="form-check-input" type="checkbox"/>
                <span asp-validation-for="PermisCE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
