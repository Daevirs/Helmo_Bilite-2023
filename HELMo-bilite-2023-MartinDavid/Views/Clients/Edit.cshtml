@model HELMo_bilite_2023_MartinDavid.ViewModel.ClientsViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Modifier";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4> Client : @Model.NomEntreprise</h4> 
<div class="row">
    <p>@ViewBag.Error</p>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
            <label asp-for="NomEntreprise" class="control-label"></label>
            <input asp-for="NomEntreprise" class="form-control" readonly />
            <span asp-validation-for="NomEntreprise" class="text-danger"></span>
        </div>
        <div class="">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" readonly />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="">
            <label asp-for="Siege" class="control-label"></label>
            <input asp-for="Siege" class="form-control" readonly />
            <span asp-validation-for="Siege" class="text-danger"></span>
        </div>
        <div class="form-check form-switch">
            <label asp-for="Confiance" class="form-check-label"></label>
            <input asp-for="Confiance" class="form-check-input" type="checkbox" role="switch"/>
            <span asp-validation-for="Confiance" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Modifier le status" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>