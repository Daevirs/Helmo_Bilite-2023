@model IEnumerable<Client>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomEntreprise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confiance)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomEntreprise)
                </td>
                <td>
                    @if (item.Photo != null)
                    {
                        <img src="~/@item.Photo" alt="N/A" class="img-fluid img-thumbnail" style="max-height: 3em; max-width: 3em" />
                    }
                </td>
                @if(item.Confiance)
                {
                    <td style="color: firebrick;">Mauvais payeur</td>
                } else
                {
                    <td>Rien à signaler</td>
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-secondary" onclick="location.href='@Url.Action("IndexClient","Livraisons")/@item.Id'">Livraisons</a>
                </td>
            </tr>
        }
    </tbody>
</table>