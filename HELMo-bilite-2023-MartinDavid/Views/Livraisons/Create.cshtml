@model HELMo_bilite_2023_MartinDavid.ViewModel.AjouterLivraisonViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Livraison</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewData["Error"] != null)
            {
                <p style="color: firebrick;">@ViewData["Error"]</p>
                ViewData["Error"] = null;
            }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chargement" class="control-label"></label>
                <input asp-for="Chargement" class="form-control"/>
