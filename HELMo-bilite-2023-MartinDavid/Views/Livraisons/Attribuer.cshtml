@model HELMo_bilite_2023_MartinDavid.ViewModel.AttribuerLivraisonViewModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Attribuer</title>
</head>
<body>

<h4>Attribuer la livraison</h4>
<hr />

<div class="row">
    
    <div class="col-md-4">
        @if (ViewData["Error"] != null)
        {
            <p style="color: firebrick;">@ViewData["Error"]</p>
            ViewData["Error"] = null;
        }
        <form asp-action="Attribuer">
            <aside style="position: absolute; right: 10em; text-shadow: #404040 1px 0 20px; backdrop-filter: invert(10%)">
                <p> Si aucun chauffeur n'est disponible pour cette livraison,<br/>
                    veuiller contacter le client</p>
            </aside>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Chauffeur" class="control-label"></label>
                @Html.DropDownListFor(m => m.Chauffeur, ViewBag.Chauffeurs as IEnumerable<SelectListItem>, "Sélectionnez un chauffeur", new { @class = "form-control", @name = "Chauffeur" })
                <span asp-validation-for="Chauffeur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Camion" class="control-label"></label>
                @Html.DropDownListFor(m => m.Camion, ViewBag.Camions as IEnumerable<SelectListItem>, "Sélectionnez un camion", new { @class = "form-control", @name = "Camion" })
                <span asp-validation-for="Camion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Attribuer" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>

