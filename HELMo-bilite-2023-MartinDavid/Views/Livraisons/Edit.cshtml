@model HELMo_bilite_2023_MartinDavid.ViewModel.EditLivraisonViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Livraison</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Chargement" class="control-label"></label>
                <input asp-for="Chargement" class="form-control" />
                <span asp-validation-for="Chargement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dechargement" class="control-label"></label>
                <input asp-for="Dechargement" class="form-control" />
                <span asp-validation-for="Dechargement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenu" class="control-label"></label>
                <input asp-for="Contenu" class="form-control" />
                <span asp-validation-for="Contenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureChargement" class="control-label"></label>
                <input asp-for="HeureChargement" class="form-control" />
                <span asp-validation-for="HeureChargement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeureDechargementAttendu" class="control-label"></label>
                <input asp-for="HeureDechargementAttendu" class="form-control" />
                <span asp-validation-for="HeureDechargementAttendu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
